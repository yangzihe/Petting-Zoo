<div class="body">
  <h1>Welcome to our Petting Zoo!</h1>

  <h3><%= link_to 'Pens', pen_index_path %></h3>

  <h3><%= link_to 'Visitors', person_index_path %></h3>
  
  <% Interaction.all.each do |i| %>
    <% if i.act == 'pet' %>
      <%= i.person.name %> petted a <%= i.animal %>
    <% elsif i.act == 'play with' %>
      <%= i.person.name %> played with a <%= i.animal %>
    <% elsif i.act == 'take a selfie with' %>
      <%= i.person.name %> took a selfie with a <%= i.animal %>
    <% end %>
  <% end %>


</div>